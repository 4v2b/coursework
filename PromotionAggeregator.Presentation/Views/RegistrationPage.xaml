<Page
    x:Class="PromotionAggeregator.Presentation.Views.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PromotionAggeregator.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<TextBox x:Name="email" HorizontalAlignment="Left" Margin="700,435,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="30" Width="120"/>
		<TextBox x:Name="password" HorizontalAlignment="Left" Margin="700,490,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="115"/>
		<TextBox x:Name="repeatPassword" HorizontalAlignment="Left" Margin="702,543,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="113"/>
		<Button x:Name="confirm" Content="Button" Margin="765,610,0,0" VerticalAlignment="Top" Click="confirm_Click"/>

	</Grid>
</Page>
