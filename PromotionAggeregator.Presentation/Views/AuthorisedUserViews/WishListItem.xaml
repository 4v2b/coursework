<UserControl
    x:Class="PromotionAggeregator.Presentation.Views.WishlistItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PromotionAggeregator.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="type" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold" />
        <TextBlock Grid.Column="1" x:Name="title" Margin="10" VerticalAlignment="Center" />
        <TextBlock Grid.Column="2" x:Name="endDate" Margin="10" VerticalAlignment="Center" FontWeight="SemiLight"/>
        <Button VerticalAlignment="Center"  Grid.Column="3" Margin="10"  Style="{Binding Source={StaticResource CancelButton}}" x:Name="wishBtn" Click="RemovePromotionClick">
            <SymbolIcon Symbol="Cancel" HorizontalAlignment="Right"/>
        </Button>
    </Grid>
</UserControl>
