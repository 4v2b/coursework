<Application
    x:Class="PromotionAggeregator.Presentation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light"
    xmlns:local="using:PromotionAggeregator.Presentation"
    >
    <Application.Resources>
        <!-- Creates a resource dictionary in the page context -->
       

        <ResourceDictionary>
            <Style TargetType="Button" x:Key="AuthButton">
                <Setter Property="Foreground" Value="#D6E4E5" />
                <Setter Property="Background" Value="#497174" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style TargetType="Button" x:Key="CancelButton">
                <Setter Property="Foreground" Value="#D6E4E5" />
                <Setter Property="Background" Value="#EB6440" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <SolidColorBrush x:Key="PrimaryColor" Color="#497174" />
            <SolidColorBrush x:Key="SecondaryColor" Color="#D6E4E5" />

            <SolidColorBrush x:Key="AccentColor" Color="#EB6440" />
            <SolidColorBrush x:Key="NeutralColor" Color="#EFF5F5" />

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
